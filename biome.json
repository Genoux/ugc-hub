{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!**/node_modules", "!!**/.next", "!!**/dist", "!!**/build", "!!**/.cache"]
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } }
}
